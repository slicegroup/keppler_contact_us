.contact-form
	= simple_form_for @message, :url => "/admin/messages", :method => :post do |f|
		.row
			.col-lg-12
				= f.input :name, label: false, input_html: {class: "form-control", placeholder: "Nombre"}

			.col-lg-12
				= f.input :email, label: false, input_html: {class: "form-control", placeholder: "Email"}

			.col-lg-12
				= f.input :subject, label: false, input_html: {class: "form-control", placeholder: "Asunto"}

			.col-lg-12
				= f.input :content, as: :text, label: false, input_html: {class: "form-control", placeholder: "Mensaje..."}

		.form-actions.right
			= f.button :submit, "Enviar", class: "btn btn-primary"

		