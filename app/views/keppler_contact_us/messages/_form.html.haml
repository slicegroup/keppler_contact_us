.wrapper
	.wrapper-body.container
		.actions
			= link_to messages_path, class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => "Volver" do
				= material_icon.md_18.arrow_back.css_class("md-dark")
		.wrapper-inputs
			.card
				= simple_form_for @message do |f|
					.row
						= f.input :name
						= f.input :subject
						= f.input :email
						= f.input :content, input_html: {class: "materialize-textarea"}
						= f.input :read, as: :checkbox_material

					.form-actions.right
						= f.button :submit, "Guardar", class: "btn"
