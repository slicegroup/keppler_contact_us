.listing-show-header
	.actions
		- if can? :update, User
			= link_to edit_message_setting_path(@message_setting), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => "Editar" do
				= material_icon.md_24.create
	%h5
		= material_icon.md_24.account_circle.css_class("md-light") 
		= t("model.singular.#{controller_name.singularize}")
.listing-show-body.card{ resize: true , style: "height: {{windowHeight}}px;" }
	%ul.list
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.id")
			.display-value= @message_setting.id
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.mailer_to")
			.display-value= @message_setting.mailer_to
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.recaptcha_pv")
			.display-value= @message_setting.recaptcha_pv
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.recaptcha_pb")
			.display-value= @message_setting.recaptcha_pb
	

:javascript
	$(".modal-trigger").leanModal();
	$('.tooltipped').tooltip({delay: 1});