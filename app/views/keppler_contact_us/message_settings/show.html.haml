= title "Message_settings | #{@message_setting.id}"
.wrapper
	.wrapper-body.container
		.actions
			- if can? :delete, Message_setting
				= link_to message_setting_path(@message_setting), class: "btn-floating btn-flat right tooltipped", "data-position" => "bottom", "data-tooltip" => "Eliminar", method: :delete, data: { confirm: 'Are you sure?' } do
					= material_icon.md_18.delete.css_class("md-dark")	
			- if can? :update, Message_setting
				= link_to edit_message_setting_path(@message_setting), class: "right btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => "Editar" do
					= material_icon.md_18.create.css_class("md-dark")
			= link_to message_settings_path, class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => "Volver" do
				= material_icon.md_18.arrow_back.css_class("md-dark") 
		.card			
			%ul.list
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.id")
					.display-value.fs-body-1.tc-black-2= @message_setting.id.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.mailer_to")
					.display-value.fs-body-1.tc-black-2= @message_setting.mailer_to.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.recaptcha_pv")
					.display-value.fs-body-1.tc-black-2= @message_setting.recaptcha_pv.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.recaptcha_pb")
					.display-value.fs-body-1.tc-black-2= @message_setting.recaptcha_pb.to_s.humanize
