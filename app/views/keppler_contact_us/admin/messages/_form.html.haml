.container-fluid
  .row
    .listing.col-lg-12.col-xs-12
      %section.content
        .row
          .col-md-3
            = render 'compose'
            = render 'folders'
            = render 'labels'
          .col-md-9
            = simple_form_for [:admin, :contact_us, object] do |f|
              .container-fluid
                -# .row
                  .col-lg-2
                    = link_to :back, class: "", "data-position" => "bottom", "data-tooltip" => t("keppler.actions.back") do
                      .arrow-back.btn.btn-default
                        %i.fa.fa-angle-left
                        = t('keppler.actions.back')

                .row
                  .box.slice-box
                    .box-header.with-border
                      %h3.box-title= t("keppler.modules.#{action_name.underscore}")
                      .box-tools.pull-right
                        %a.btn.btn-box-tool{"data-widget" => "collapse", :type => "button" }
                          %i.fa.fa-minus

                    .box-body
                      .form-group
                        %input.form-control{placeholder: 'To:', value: (object&.email if action_name.eql?('reply')) }
                      .form-group
                        %input.form-control{placeholder: 'Subject:', value: (object&.subject) }
                      .form-group
                        %textarea#compose-textarea.form-control{ style: 'height: 300px;', value: (object&.content if action_name.eql?('share')) }
                          = raw object&.content if action_name.eql?('share')
                      .form-group
                        .btn.btn-default.btn-file
                          %i.fa.fa-paperclip
                          Attachment
                          %input{ name: 'attachment', type: 'file' }/
                        %p.help-block Max. 32MB
            
